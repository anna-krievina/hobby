@{
    @model WebProjects.Models.CalculatorModel
}
@section Scripts {
    <script src="~/js/calculator.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/calculator.css" asp-append-version="true" />
}
<body>
    <div id="centerContainerDiv">
        <div id="resultFieldDiv">
            <input id="resultField" maxlength="22" type="text" readonly="readonly" Value=""/>
        </div>
        <div id="ActionsDiv">
            @for (int i = 0; i < Model.Operation.Length; i++)
            {
                <input type="button" class="calcButton calcOperation" value="@Model.Operation[i]" />
            }
        </div>
        <div id="NumbersDiv">
            @{
                int j = 0;
            }
            @for (int i = 1; i < 10; i++)
            {
                <input type="button" class="calcButton calcNumber" value="@i" />
                @if (i % 3 == 0)
                {
                    <input type="button" class="calcButton calcAction" value="@Model.Action[j]" />
                    j++;
                    <br />
                }
            }
        </div>
    </div>
</body>
